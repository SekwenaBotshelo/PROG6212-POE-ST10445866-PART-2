@model List<PROG6212_POE.Models.Claim>
@{
    ViewData["Title"] = "Reports";
}

<h2>Monthly Claims Report</h2>

<table class="table">
    <thead>
        <tr>
            <th>Lecturer</th>
            <th>Month</th>
            <th>Total Hours</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.LecturerName</td>
                    <td>@claim.Month</td>
                    <td>@claim.TotalHours</td>
                    <td>@claim.Status</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center text-muted">No claims available.</td>
            </tr>
        }
    </tbody>
</table>