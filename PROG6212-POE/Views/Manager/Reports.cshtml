@model List<PROG6212_POE.Models.Claim>
@{
    ViewData["Title"] = "Reports";
}

<div class="container mt-4">

    <!-- Guidance Card -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white">Guidance</div>
        <div class="card-body">
            <p>
                Review monthly claims report below. Use this information for reporting and audit purposes.
            </p>
        </div>
    </div>

    <h2>Monthly Claims Report</h2>

    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <th>Lecturer</th>
                <th>Month</th>
                <th>Total Hours</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.LecturerName</td>
                        <td>@claim.Month</td>
                        <td>@claim.TotalHours</td>
                        <td>@claim.Status</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center text-muted">No claims available.</td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="Dashboard" class="btn btn-secondary mt-3">Back to Manager Dashboard</a>
</div>
