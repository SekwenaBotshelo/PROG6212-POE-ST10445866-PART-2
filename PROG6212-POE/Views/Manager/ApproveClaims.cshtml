@model List<PROG6212_POE.Models.Claim>
@{
    ViewData["Title"] = "Approve Pending Claims";
}

<div class="container mt-4">

    <!-- Guidance Card -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white">Guidance</div>
        <div class="card-body">
            <p>
                Here you can approve or reject pending claims. Use the buttons in the Actions column to manage each claim.
            </p>
        </div>
    </div>

    <h2>@ViewData["Title"]</h2>

    <table class="table table-striped mt-3">
        <thead>
            <tr>
                <th>Claim ID</th>
                <th>Lecturer</th>
                <th>Month</th>
                <th>Total Hours</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.ClaimId</td>
                        <td>@claim.LecturerName</td>
                        <td>@claim.Month</td>
                        <td>@claim.TotalHours</td>
                        <td>@claim.Status</td>
                        <td>
                            <form asp-action="Approve" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@claim.ClaimId" />
                                <button type="submit" class="btn btn-success btn-sm">Approve</button>
                            </form>
                            <form asp-action="Reject" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@claim.ClaimId" />
                                <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                            </form>
                            <a asp-action="ViewClaimDetails" asp-route-id="@claim.ClaimId" class="btn btn-info btn-sm">View</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center text-muted">No pending claims.</td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="Dashboard" class="btn btn-secondary mt-3">Back to Manager Dashboard</a>
</div>
