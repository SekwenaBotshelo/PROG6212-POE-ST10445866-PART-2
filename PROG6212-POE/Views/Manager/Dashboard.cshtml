@{
    ViewData["Title"] = "Manager Dashboard";
}

<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="mb-4">
        <a class="btn btn-primary me-2 disabled"><i class="bi bi-check-circle"></i> Approve Claims</a>
        <a class="btn btn-danger me-2 disabled"><i class="bi bi-x-circle"></i> Reject Claims</a>
        <a class="btn btn-secondary disabled"><i class="bi bi-eye"></i> View Details</a>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h5 class="card-title mb-3">Claims Pending Approval</h5>
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>Claim ID</th>
                            <th>Lecturer</th>
                            <th>Month</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="5" class="text-center">No claims pending approval.</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>