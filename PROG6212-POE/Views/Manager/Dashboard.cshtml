@{
    ViewData["Title"] = "Manager Dashboard";
}

<div class="container mt-4">
    <h1 class="mb-4 text-center">@ViewData["Title"]</h1>

    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm h-100 text-center">
                <div class="card-body">
                    <h5 class="card-title">Pending Claims</h5>
                    <p class="card-text display-6">@ViewBag.PendingCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm h-100 text-center">
                <div class="card-body">
                    <h5 class="card-title">Approved Claims</h5>
                    <p class="card-text display-6">@ViewBag.ApprovedCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm h-100 text-center">
                <div class="card-body">
                    <h5 class="card-title">Rejected Claims</h5>
                    <p class="card-text display-6">@ViewBag.RejectedCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm h-100 text-center">
                <div class="card-body">
                    <h5 class="card-title">Total Claims</h5>
                    <p class="card-text display-6">@ViewBag.TotalCount</p>
                </div>
            </div>
        </div>
    </div>

    <div class="mb-4">
        <a asp-action="ApproveClaims" class="btn btn-primary me-2">Approve Claims</a>
        <a asp-action="Reports" class="btn btn-secondary">Reports</a>
    </div>
</div>