@model PROG6212_POE.Models.Claim
@{
    ViewData["Title"] = "Claim Details";
}

<div class="container mt-4">
    <h2 class="mb-4">Claim Details - ID: @Model.ClaimId</h2>

    <!-- Claim Info Card -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h5 class="card-title">Claim Information</h5>
            <div class="row mt-3">
                <div class="col-md-6 mb-2">
                    <strong>Lecturer:</strong> @Model.LecturerName
                </div>
                <div class="col-md-6 mb-2">
                    <strong>Month:</strong> @Model.Month
                </div>
                <div class="col-md-6 mb-2">
                    <strong>Total Hours:</strong> @Model.TotalHours
                </div>
                <div class="col-md-6 mb-2">
                    <strong>Hourly Rate:</strong> R @Model.HourlyRate
                </div>
                <div class="col-md-6 mb-2">
                    <strong>Total Amount:</strong> R @Model.TotalAmount
                </div>
                <div class="col-md-6 mb-2">
                    <strong>Status:</strong>
                    <span class="badge @(Model.Status switch
                          {
                              "Pending Verification" => "bg-warning",
                              "Verified" => "bg-info",
                              "Approved" => "bg-success",
                              "Rejected" => "bg-danger",
                              _ => "bg-secondary"
                          })">
                        @Model.Status
                    </span>
                </div>
                <div class="col-12 mt-2">
                    <strong>Notes:</strong> @Model.Notes
                </div>
            </div>
        </div>
    </div>

    <!-- Supporting Documents Card -->
    @if (Model.SupportingDocuments != null && Model.SupportingDocuments.Any())
    {
        <div class="card shadow-sm mb-4">
            <div class="card-header">Supporting Documents</div>
            <div class="card-body">
                <ul class="list-group">
                    @foreach (var doc in Model.SupportingDocuments)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <a href="@doc.FilePath" target="_blank">@doc.FileName</a>
                            <span class="text-muted">@doc.UploadedOn.ToString("dd MMM yyyy")</span>
                        </li>
                    }
                </ul>
            </div>
        </div>
    }

    <!-- Action Buttons -->
    <div class="mb-4">
        <form asp-action="Verify" method="post" class="d-inline">
            <input type="hidden" name="id" value="@Model.ClaimId" />
            <button type="submit" class="btn btn-success me-2">Verify</button>
        </form>

        <form asp-action="Reject" method="post" class="d-inline">
            <input type="hidden" name="id" value="@Model.ClaimId" />
            <button type="submit" class="btn btn-danger me-2">Reject</button>
        </form>

        <a asp-action="VerifyClaims" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i>Back to Pending Claims
        </a>

        <a asp-action="Dashboard" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Back to Coordinator Dashboard
        </a>
    </div>
</div>