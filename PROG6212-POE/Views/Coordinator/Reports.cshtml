@model List<PROG6212_POE.Models.Claim>
@{
    ViewData["Title"] = "Claims Report";
}

<div class="container mt-4">

    <!-- Guidance Card -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white">Guidance</div>
        <div class="card-body">
            <p>
                Welcome, Coordinator! This page provides a complete overview of all submitted claims.
                You can view the details and supporting documents for each claim.
            </p>
        </div>
    </div>

    <h1 class="mb-4 text-center">@ViewData["Title"]</h1>

    <!-- Claims Table -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h5 class="card-title mb-3">All Claims Overview</h5>
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>Claim ID</th>
                            <th>Lecturer</th>
                            <th>Month</th>
                            <th>Total Hours</th>
                            <th>Hourly Rate</th>
                            <th>Total Amount</th>
                            <th>Status</th>
                            <th>Supporting Documents</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var claim in Model)
                            {
                                <tr>
                                    <td>@claim.ClaimId</td>
                                    <td>@claim.LecturerName</td>
                                    <td>@claim.Month</td>
                                    <td>@claim.TotalHours</td>
                                    <td>R @claim.HourlyRate</td>
                                    <td>R @claim.TotalAmount</td>
                                    <td>
                                        <span class="badge @(claim.Status switch
                                              {
                                                  "Pending Verification" => "bg-warning",
                                                  "Verified" => "bg-info",
                                                  "Approved" => "bg-success",
                                                  "Rejected" => "bg-danger",
                                                  _ => "bg-secondary"
                                              })">@claim.Status</span>
                            </td>
                            <td>
                                @if (claim.SupportingDocuments != null && claim.SupportingDocuments.Any())
                                        {
                                            <ul class="list-unstyled mb-0">
                                                @foreach (var doc in claim.SupportingDocuments)
                                                {
                                                    <li>
                                                        <a href="@doc.FilePath" target="_blank">@doc.FileName</a>
                                                    </li>
                                                }
                                            </ul>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No documents</span>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center text-muted">No claims submitted yet.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- Back to Dashboard -->
            <div class="mb-4">
                <a asp-action="Dashboard" class="btn btn-secondary"><i class="bi bi-arrow-left-circle"></i> Back to Dashboard</a>
            </div>
        </div>
    </div>
</div>
