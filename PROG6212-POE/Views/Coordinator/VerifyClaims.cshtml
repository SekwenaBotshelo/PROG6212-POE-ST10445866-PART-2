@model IEnumerable<PROG6212_POE.Models.Claim>
@{
    ViewData["Title"] = "Verify Claims";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Pending Claims for Verification</h1>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            All claims have been processed — no pending claims to verify.
        </div>
        <div class="text-center">
            <a asp-action="Dashboard" class="btn btn-outline-primary mt-3">Back to Dashboard</a>
        </div>
    }
    else
    {
        <p class="text-muted small text-center mb-3">
            <em>Note: Claims with ≤ 200 hours and ≤ R1000/hour are automatically verified.</em>
        </p>

        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>Claim ID</th>
                        <th>Lecturer Name</th>
                        <th>Month</th>
                        <th>Total Hours</th>
                        <th>Total Amount</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model)
                    {
                        <tr>
                            <td>@claim.ClaimId</td>
                            <td>@claim.LecturerName</td>
                            <td>@claim.Month</td>
                            <td>@claim.TotalHours</td>
                            <td>R @claim.TotalAmount</td>
                            <td>
                                <span class="badge bg-warning text-dark">Pending</span>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="ViewClaimDetails" asp-route-id="@claim.ClaimId" class="btn btn-outline-primary btn-sm">
                                        View Details
                                    </a>
                                    <form asp-action="Verify" asp-route-id="@claim.ClaimId" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-outline-success btn-sm ms-1">
                                            Auto Verify
                                        </button>
                                    </form>
                                    <form asp-action="Reject" asp-route-id="@claim.ClaimId" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-outline-danger btn-sm ms-1">
                                            Reject
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mb-3">
            <a asp-action="Dashboard" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Back to Coordinator Dashboard
            </a>
        </div>

    }
</div>
