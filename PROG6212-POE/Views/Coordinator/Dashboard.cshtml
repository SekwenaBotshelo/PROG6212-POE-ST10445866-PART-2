@model List<PROG6212_POE.Models.Claim>
@{
    ViewData["Title"] = "Coordinator Dashboard";
}

<div class="container mt-4">

    <!-- Guidance Card -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white">Guidance</div>
        <div class="card-body">
            <p>
                Welcome, Coordinator! Review claims, monitor statuses, and generate reports.
                Use the actions below to view or verify claims.
            </p>
        </div>
    </div>

    <h1 class="mb-4 text-center">@ViewData["Title"]</h1>

    <!-- Summary cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm h-100 text-center">
                <div class="card-body">
                    <h5 class="card-title">Claims Pending Verification</h5>
                    <p class="card-text display-6 summary-number pending">@ViewBag.PendingCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm h-100 text-center">
                <div class="card-body">
                    <h5 class="card-title">Claims Verified</h5>
                    <p class="card-text display-6 summary-number verified">@ViewBag.VerifiedCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm h-100 text-center">
                <div class="card-body">
                    <h5 class="card-title">Total Claims</h5>
                    <p class="card-text display-6 summary-number total">@ViewBag.TotalCount</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Buttons -->
    <div class="mb-4">
        <a asp-action="VerifyClaims" class="btn btn-primary me-2"><i class="bi bi-check2-square"></i> Verify Claims</a>
        <a asp-action="Reports" class="btn btn-secondary"><i class="bi bi-file-earmark-text"></i> View Reports</a>
    </div>

    <!-- Table of all claims -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h5 class="card-title mb-3">All Claims Overview</h5>
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>Claim ID</th>
                            <th>Lecturer</th>
                            <th>Month</th>
                            <th>Total Hours</th>
                            <th>Total Amount</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var claim in Model)
                            {
                                <tr>
                                    <td>@claim.ClaimId</td>
                                    <td>@claim.LecturerName</td>
                                    <td>@claim.Month</td>
                                    <td>@claim.TotalHours</td>
                                    <td>@claim.TotalAmount.ToString("C")</td>
                                    <td>
                                        <span class="badge @(claim.Status switch
                                              {
                                                  "Pending Verification" => "bg-warning",
                                                  "Verified" => "bg-info",
                                                  "Approved" => "bg-success",
                                                  "Rejected" => "bg-danger",
                                                  _ => "bg-secondary"
                                              })">@claim.Status</span>
                            </td>
                            <td>
                                <a asp-action="ViewClaimDetails" asp-route-id="@claim.ClaimId" class="btn btn-info btn-sm">View</a>
                            </td>
                        </tr>
                                                }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted">No claims submitted yet.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>