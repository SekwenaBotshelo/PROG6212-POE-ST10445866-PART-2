@model List<PROG6212_POE.Models.Claim>
@{
    ViewData["Title"] = "Coordinator Dashboard";
}

<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm h-100 text-center">
                <div class="card-body">
                    <h5 class="card-title">Claims Pending Verification</h5>
                    <p class="card-text display-6">@ViewBag.PendingCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm h-100 text-center">
                <div class="card-body">
                    <h5 class="card-title">Claims Verified</h5>
                    <p class="card-text display-6">@ViewBag.VerifiedCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm h-100 text-center">
                <div class="card-body">
                    <h5 class="card-title">Total Claims</h5>
                    <p class="card-text display-6">@ViewBag.TotalCount</p>
                </div>
            </div>
        </div>
    </div>

    <div class="mb-4">
        <a asp-action="VerifyClaims" class="btn btn-primary me-2">Verify Claims</a>
    </div>
</div>
