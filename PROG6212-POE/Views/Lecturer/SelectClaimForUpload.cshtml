@model IEnumerable<PROG6212_POE.Models.Claim>
@{
    ViewData["Title"] = "Select Claim for Upload";
}

<div class="container mt-4">
    <h1 class="mb-4 text-center">Select a Claim to Upload Documents</h1>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["ErrorMessage"]</div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">No claims available for uploading documents.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>Claim ID</th>
                        <th>Lecturer</th>
                        <th>Month</th>
                        <th>Total Hours</th>
                        <th>Total Amount</th>
                        <th>Status</th>
                        <th>Uploaded Docs</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model)
                    {
                        <tr>
                            <td>@claim.ClaimId</td>
                            <td>@claim.LecturerName</td>
                            <td>@claim.Month</td>
                            <td>@claim.TotalHours</td>
                            <td>R @claim.TotalAmount</td>
                            <td>
                                <span class="badge @(claim.Status switch
                                      {
                                          "Pending" => "bg-warning",
                                          "Verified" => "bg-info",
                                          "Approved" => "bg-success",
                                          "Rejected" => "bg-danger",
                                          _ => "bg-secondary"
                                      })">@claim.Status</span>
                    </td>
                    <td>
                        @(claim.SupportingDocuments?.Count() ?? 0)
                    </td>
                    <td>
                        <a asp-action="UploadDocuments" asp-route-claimId="@claim.ClaimId"
                           class="btn btn-primary btn-sm">
                            Upload Documents
                        </a>
                    </td>
                </tr>
                                }
                </tbody>
            </table>
        </div>
    }

    <!-- Optional Guidance Card -->
    <div class="card shadow-sm mt-4">
        <div class="card-body">
            <h5 class="card-title mb-3">Guidance</h5>
            <ul class="text-muted">
                <li>Click the "Upload Documents" button for a claim to add supporting files.</li>
                <li>All seeded/demo claims appear here for testing purposes.</li>
                <li>Uploaded files will show on the claim detail page.</li>
                <li>Allowed formats: .pdf, .docx, .xlsx.</li>
            </ul>
        </div>
    </div>
</div>
