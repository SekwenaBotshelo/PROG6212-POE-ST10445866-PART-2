@model List<PROG6212_POE.Models.Claim>
@{
    ViewData["Title"] = "Track Claim Status";
}

<h2>Track Claim Status</h2>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Claim ID</th>
            <th>Lecturer</th>
            <th>Month</th>
            <th>Total Hours</th>
            <th>Hourly Rate</th>
            <th>Total Amount</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.ClaimId</td>
                    <td>@claim.LecturerName</td>
                    <td>@claim.Month</td>
                    <td>@claim.TotalHours</td>
                    <td>R @claim.HourlyRate</td>
                    <td>R @claim.TotalAmount</td>
                    <td>@claim.Status</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center text-muted">No claims submitted yet.</td>
            </tr>
        }
    </tbody>
</table>
