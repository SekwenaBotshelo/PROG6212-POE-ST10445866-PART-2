@model PROG6212_POE.Models.Claim
@{
    ViewData["Title"] = "Upload Supporting Document";
}

<div class="container mt-4">
    <h1 class="mb-4 text-center">Upload Supporting Document for Claim ID: @Model.ClaimId</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["ErrorMessage"]</div>
    }

    <form asp-action="UploadDocuments" method="post" enctype="multipart/form-data">
        <input type="hidden" name="claimId" value="@Model.ClaimId" />

        <div class="form-group mb-3">
            <label for="supportingFile">Select File</label>
            <input type="file" name="supportingFile" id="supportingFile" class="form-control" />
            <small class="form-text text-muted">Allowed formats: .pdf, .docx, .xlsx</small>
        </div>

        <button type="submit" class="btn btn-primary">Upload</button>
        <a asp-action="Dashboard" class="btn btn-secondary ms-2">Back to Dashboard</a>
    </form>

    @if (Model.SupportingDocuments != null && Model.SupportingDocuments.Any())
    {
        <h4 class="mt-4">Uploaded Files</h4>
        <ul>
            @foreach (var doc in Model.SupportingDocuments)
            {
                <li>
                    <a href="@doc.FilePath" target="_blank">@doc.FileName</a>
                </li>
            }
        </ul>
    }
    else
    {
        <p class="text-muted mt-2">No files uploaded yet.</p>
    }
</div>