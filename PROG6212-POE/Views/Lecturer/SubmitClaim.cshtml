@model PROG6212_POE.Models.Claim
@{
    ViewData["Title"] = "Submit Claim";
}

<div class="container mt-5">
    <div class="card shadow-sm mx-auto" style="max-width:600px;">
        <div class="card-body">
            <h2 class="card-title text-center mb-4">Submit Monthly Claim</h2>

            @* Display TempData messages if any *@
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger text-center">@TempData["ErrorMessage"]</div>
            }

            <form asp-action="SubmitClaim" method="post">
                <div class="form-group mb-3">
                    <label asp-for="LecturerName">Lecturer Name</label>
                    <input asp-for="LecturerName" class="form-control" placeholder="Enter your full name" />
                    <span asp-validation-for="LecturerName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Month">Month</label>
                    <input asp-for="Month" type="month" class="form-control" />
                    <span asp-validation-for="Month" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="TotalHours">Hours Worked</label>
                    <input asp-for="TotalHours" type="number" step="0.1" class="form-control" placeholder="e.g., 160" />
                    <span asp-validation-for="TotalHours" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="HourlyRate">Hourly Rate</label>
                    <input asp-for="HourlyRate" type="number" step="0.01" class="form-control" placeholder="e.g., 350.50" />
                    <span asp-validation-for="HourlyRate" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Notes">Notes (optional)</label>
                    <textarea asp-for="Notes" class="form-control" placeholder="Any additional information for your claim..."></textarea>
                </div>

                <div class="d-flex justify-content-center gap-2">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> Submit Claim
                    </button>
                    <a asp-action="Dashboard" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Back to Dashboard
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
